<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp"
    android:orientation="vertical"
    tools:context="com.karla00058615.restaurants.activities.RestaurantInfo">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUFFALO WINGS"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buffalo Wings es un restaurante de origen salvadoreño
        especializado en chicken wings bañadas en salsa con diferentes grados de picante.
        Actualmente cuenta con sucursales en El Salvador, Honduras, Nicaragua, Costa Rica y Colombia."
        android:layout_margin="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MENÚ\nBBQ tradiciona\nTeriyaki\nAjo parmesano\nMostaza\nChipotle\nTwister"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="40dp"/>

        <ImageView
            android:id="@+id/img"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/buffalo"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="40dp"/>

    </LinearLayout>

</LinearLayout>
